@model QuestionBank.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2><i class="bi bi-pencil"></i> @ViewData["Title"]</h2>
    </div>
    <div class="card shadow p-4 mb-4">
        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Email" class="form-label">User Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter user email" autocomplete="off" />
                <span asp-validation-for="Email" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedRole" class="form-label">User Role</label>
                <select asp-for="SelectedRole" class="form-select" asp-items="Model.Roles">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="SelectedRole" class="invalid-feedback"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("Javascript/_ClientSideValidation")
}