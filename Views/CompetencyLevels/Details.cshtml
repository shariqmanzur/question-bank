@model QuestionBank.Models.CompetencyLevel
@{
    ViewData["Title"] = "Competency Level Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2><i class="bi bi-eye"></i> @ViewData["Title"]</h2>
    </div>
    <div class="card shadow p-4 mb-4">
        <h4 class="text-primary"> @ViewData["Title"]</h4>
        <dl class="row">
            <dt class="col-sm-3">Level</dt>
            <dd class="col-sm-9"><span class="badge bg-success">@Model.Level</span></dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>
</div>
