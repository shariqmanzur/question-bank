@model QuestionBank.Models.Topic
@{
    ViewData["Title"] = "Create Topic";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2><i class="bi bi-plus-lg"></i> @ViewData["Title"]</h2>
    </div>
    <div class="card shadow p-4 mb-4">
        <form asp-action="Create" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Topic Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter topic name" autocomplete="off" />
                <span asp-validation-for="Name" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ThemeId" class="form-label">Theme</label>
                <select asp-for="ThemeId" class="form-select" asp-items="@(new SelectList(ViewBag.Themes, "Id", "Name"))">
                    <option value="">-- Select Theme --</option>
                </select>
                <span asp-validation-for="ThemeId" class="invalid-feedback"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("Javascript/_ClientSideValidation")
}