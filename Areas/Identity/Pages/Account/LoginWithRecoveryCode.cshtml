@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Recovery Code Login</h2>
                    <p class="text-muted text-center mb-4">
                        This login won't be remembered until you use your authenticator.
                    </p>

                    <form method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.RecoveryCode"
                                   class="form-control"
                                   placeholder="Recovery Code"
                                   autocomplete="off" />
                            <label asp-for="Input.RecoveryCode">Recovery Code</label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger invalid-feedback"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}