@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Two-Factor Authentication</h2>
                    <p class="text-muted text-center mb-4">Enter your authenticator code.</p>

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <input asp-for="RememberMe" type="hidden" />

                        <div class="form-floating mb-3">
                            <input asp-for="Input.TwoFactorCode"
                                   class="form-control"
                                   placeholder="Code"
                                   autocomplete="off" />
                            <label asp-for="Input.TwoFactorCode">Authenticator Code</label>
                            <span asp-validation-for="Input.TwoFactorCode" class="text-danger invalid-feedback"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMachine" class="form-check-input" />
                            <label asp-for="Input.RememberMachine" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMachine)
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Log in</button>
                    </form>

                    <div class="mt-3 text-center">
                        <small>
                            <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
                                Use a recovery code
                            </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}